<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jit.appcloud.ui.activity.me.ViceUserEditorActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar"/>
    <LinearLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_dimension_30"
        android:paddingRight="@dimen/common_dimension_30">
        <LinearLayout
            android:layout_marginTop="@dimen/common_dimension_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimension_45"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="@dimen/common_dimension_80"
                android:layout_height="wrap_content"
                android:text="用户账号"
                android:textColor="@color/black"
                android:textSize="@dimen/BasicTextSize"/>

            <TextView
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="text"
                android:text=""
                android:textColorHint="@color/gray3"
                android:textSize="@dimen/BasicTextSize"/>

        </LinearLayout>

        <View
            android:id="@+id/vUserName"
            style="@style/Line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimension_45"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRealName"
                android:layout_width="@dimen/common_dimension_80"
                android:layout_height="wrap_content"
                android:text="用户名称"
                android:textColor="#000000"
                android:textSize="@dimen/BasicTextSize"/>

            <EditText
                android:id="@+id/etRealName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入用户名称"
                android:inputType="text"
                android:text=""
                android:textColorHint="@color/gray3"
                android:textSize="@dimen/BasicTextSize"/>

        </LinearLayout>
        <View
            android:id="@+id/vRealName"
            style="@style/Line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimension_45"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUserPwd"
                android:layout_width="@dimen/common_dimension_80"
                android:layout_height="wrap_content"
                android:text="用户密码"
                android:textColor="#000000"
                android:textSize="@dimen/BasicTextSize"/>

            <EditText
                android:id="@+id/etUserPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入用户密码"
                android:inputType="text"
                android:text=""
                android:textColorHint="@color/gray3"
                android:textSize="@dimen/BasicTextSize"/>

        </LinearLayout>
        <View
            android:id="@+id/vUserPwd"
            style="@style/Line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimension_45"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCfUserPwd"
                android:layout_width="@dimen/common_dimension_80"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:textColor="#000000"
                android:textSize="@dimen/BasicTextSize"/>

            <EditText
                android:id="@+id/etCfUserPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请确认用户密码"
                android:inputType="text"
                android:text=""
                android:textColorHint="@color/gray3"
                android:textSize="@dimen/BasicTextSize"/>

        </LinearLayout>
        <View
            android:id="@+id/vCfUserPwd"
            style="@style/Line"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="@dimen/common_dimension_30">
        <View
            android:background="@color/bg_line_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimension_0.5"/>
        <TextView
            android:text="用户密码与确认密码为空则不修改密码!"
            android:layout_marginLeft="@dimen/common_dimension_8"
            android:textColor="@color/red0"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>

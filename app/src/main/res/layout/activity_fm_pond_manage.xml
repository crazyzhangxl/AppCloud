<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.jit.appcloud.ui.activity.me.FmPondManageActivity">
    <include
        layout="@layout/include_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:orientation="vertical"
            android:layout_marginBottom="@dimen/common_dimension_30"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_40">
                <TextView
                    android:id="@+id/tvPondAdd"
                    android:padding="@dimen/common_dimension_5"
                    android:text="新建"
                    android:drawablePadding="@dimen/common_dimension_5"
                    android:textSize="@dimen/mediumTextSize"
                    android:drawableLeft="@mipmap/ic_device_add"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvPondEditor"
                    android:padding="@dimen/common_dimension_5"
                    android:layout_marginLeft="@dimen/common_dimension_20"
                    android:text="编辑"
                    android:drawableLeft="@mipmap/ic_device_editor"
                    android:drawablePadding="@dimen/common_dimension_5"
                    android:textSize="@dimen/mediumTextSize"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvPondDel"
                    android:padding="@dimen/common_dimension_5"
                    android:layout_marginLeft="@dimen/common_dimension_20"
                    android:text="删除"
                    android:drawablePadding="@dimen/common_dimension_5"
                    android:textSize="@dimen/mediumTextSize"
                    android:drawableLeft="@mipmap/ic_feed_del"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:background="@color/bg_line_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_0.5"/>
            <LinearLayout
                android:background="@color/gray4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_45">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/LargeTextSize"
                        android:textColor="@color/black"
                        android:text="塘号"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_alignParentRight="true"
                        android:background="@color/bg_line_2"
                        android:layout_width="@dimen/common_dimension_0.5"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/LargeTextSize"
                        android:textColor="@color/black"
                        android:text="分类"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_alignParentRight="true"
                        android:background="@color/bg_line_2"
                        android:layout_width="@dimen/common_dimension_0.5"
                        android:layout_height="match_parent"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/LargeTextSize"
                        android:textColor="@color/black"
                        android:text="品种"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_alignParentRight="true"
                        android:background="@color/bg_line_2"
                        android:layout_width="@dimen/common_dimension_0.5"
                        android:layout_height="match_parent"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/LargeTextSize"
                        android:textColor="@color/black"
                        android:text="设备功能"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </LinearLayout>
            <View
                android:background="@color/bg_line_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_0.5"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvPondMg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="@dimen/common_dimension_30">
            <View
                android:background="@color/bg_line_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_0.5"/>
            <TextView
                android:id="@+id/tvRecordNum"
                android:text="记录数:0"
                android:layout_marginLeft="@dimen/common_dimension_8"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

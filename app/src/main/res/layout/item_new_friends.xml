<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dimension_64"
        android:background="@drawable/selector_common_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_dimension_14"
        android:paddingRight="@dimen/common_dimension_15"
        >

        <ImageView
            android:id="@+id/ivHeader"
            android:layout_width="@dimen/common_dimension_55"
            android:layout_height="@dimen/common_dimension_55"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/common_dimension_7.5"
            android:layout_marginTop="@dimen/common_dimension_7.5"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_header"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dimension_10"
                android:singleLine="true"
                android:text="沧晓"
                android:textColor="@color/gray0"
                android:textSize="@dimen/mediumTextSize"/>

            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dimension_10"
                android:layout_marginTop="@dimen/common_dimension_3"
                android:singleLine="true"
                android:text="对方请求添加你为朋友"
                android:textColor="@color/gray3"
                android:textSize="@dimen/SmallerTextSize"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_dimension_10"
            android:gravity="right"
            android:singleLine="true"
            android:text="已添加"
            android:textColor="@color/gray3"
            android:textSize="@dimen/SmallerTextSize"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvWait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_dimension_10"
            android:gravity="right"
            android:singleLine="true"
            android:text="等待验证"
            android:textColor="@color/gray3"
            android:textSize="@dimen/SmallerTextSize"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnAck"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/common_dimension_60"
            android:layout_height="@dimen/common_dimension_30"
            android:layout_marginLeft="@dimen/common_dimension_10"
            android:background="@drawable/shape_new_friend_agree"
            android:text="接受"
            android:textColor="@color/white"
            android:textSize="@dimen/SmallTextSize"
            android:visibility="gone"/>
    </LinearLayout>
</FrameLayout>
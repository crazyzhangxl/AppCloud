<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_share"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/common_dimension_20"
    android:background="@color/white"
    >

    <TextView
        android:text="塘口选择"
        android:id="@+id/share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_dimension_6"
        android:gravity="center"
        android:textColor="@color/pond_selected"
        android:textSize="@dimen/mediumTextSize"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dimension_1"
        android:background="@color/line_color"
        />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/pondTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.zhy.view.flowlayout.TagFlowLayout>


</LinearLayout>
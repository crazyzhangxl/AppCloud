<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/expandable_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/circleTextColor2"
        android:lineSpacingExtra="1dp"
        android:text="发送到发送到发送到发单时发生地方水电费是的发送到发送到方式的发送到发送到发送到"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/expand_collapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@android:color/transparent"
        android:text="收起"
        android:paddingTop="@dimen/common_dimension_5"
        android:paddingBottom="@dimen/common_dimension_5"
        android:gravity="center"
        android:textColor="@color/circleTextColor"
        android:drawablePadding="@dimen/common_dimension_3"
        android:layout_marginTop="@dimen/common_dimension_5" />
</LinearLayout>
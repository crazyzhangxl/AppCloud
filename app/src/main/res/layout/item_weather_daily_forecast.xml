<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/common_dimension_12"
    android:paddingBottom="@dimen/common_dimension_12"
    android:paddingLeft="@dimen/common_dimension_16"
    android:background="@color/white"
    >
    <TextView
        android:gravity="center"
        android:text="今天  05/09"
        android:id="@+id/date_week"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:textSize="@dimen/SmallerTextSize"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textSize="@dimen/SmallerTextSize"
        android:layout_weight="3"
        android:id="@+id/weather_status_daily"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="多云转晴"
        />

    <ImageView
        android:layout_height="@dimen/common_dimension_24"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:id="@+id/weather_icon_daily"
        android:gravity="center"
        android:src="@mipmap/ic_weather_big_rain"
        />
    <TextView
        android:textSize="@dimen/SmallerTextSize"
        android:gravity="center"
        android:id="@+id/tv_wind"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:text="你好"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/SmallerTextSize"
        android:layout_weight="3"
        android:id="@+id/temp_daily"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/common_dimension_12"
        android:gravity="center"
        android:text="15~23°"
        />

</LinearLayout>

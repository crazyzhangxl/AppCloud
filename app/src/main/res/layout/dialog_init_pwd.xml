<?xml version="1.0" encoding="utf-8"?>
<!-- 带密码验证的删除养殖户 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:paddingLeft="@dimen/common_dimension_25"
    android:paddingRight="@dimen/common_dimension_25"
    android:paddingTop="@dimen/common_dimension_15"
    android:paddingBottom="@dimen/common_dimension_15"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvDelDes"
        android:textSize="@dimen/mediumTextSize"
        android:layout_below="@id/tvTitle"
        android:lines="1"
        android:textColor="@color/red0"
        android:text="初始化密码为123456"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/tvDelDes"
        android:id="@+id/tvWill"
        android:textSize="@dimen/BasicTextSize"
        android:layout_marginTop="@dimen/common_dimension_5"
        android:layout_marginLeft="@dimen/common_dimension_25"
        android:text="即将初始化密码用户:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/tvWill"
        android:id="@+id/tvCustomName"
        android:textColor="@color/black"
        android:textSize="@dimen/BasicTextSize"
        android:layout_marginLeft="@dimen/common_dimension_25"
        android:layout_marginTop="@dimen/common_dimension_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="@dimen/common_dimension_2"
        android:textSize="@dimen/BasicTextSize"
        android:id="@+id/etPsd"
        android:textColor="@color/black"
        android:hint="请输入密码"
        android:layout_below="@id/tvCustomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/common_dimension_20"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/common_dimension_5"
        android:layout_below="@id/etPsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/red0"
            android:id="@+id/tvCancel"
            android:padding="@dimen/common_dimension_5"
            android:textSize="@dimen/BasicTextSize"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/red0"
            android:text="确定"
            android:id="@+id/tvSubmit"
            android:padding="@dimen/common_dimension_8"
            android:layout_marginLeft="@dimen/common_dimension_40"
            android:textSize="@dimen/BasicTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
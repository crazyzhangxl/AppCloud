<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llMore"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/rlAlbum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivAlbum"
                android:layout_width="@dimen/common_dimension_60"
                android:layout_height="@dimen/common_dimension_60"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_session_func"
                android:src="@mipmap/ic_func_pic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivAlbum"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_dimension_7.5"
                android:text="@string/album"
                android:textSize="@dimen/SmallerTextSize"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTakePhoto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivShot"
                android:layout_width="@dimen/common_dimension_60"
                android:layout_height="@dimen/common_dimension_60"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_session_func"
                android:src="@mipmap/ic_func_shot"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivShot"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_dimension_7.5"
                android:text="@string/shot"
                android:textSize="@dimen/SmallerTextSize"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTakeVideo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <FrameLayout
                android:background="@drawable/selector_session_func"
                android:layout_centerInParent="true"
                android:id="@+id/fl_video"
                android:layout_width="@dimen/common_dimension_60"
                android:layout_height="@dimen/common_dimension_60">

            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fl_video"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_dimension_7.5"
                android:text="@string/video"
                android:textSize="@dimen/SmallerTextSize"/>

            <ImageView
                android:id="@+id/ivVideo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/ic_func_video" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1">
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/include_toolbar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_50">
                <TextView
                    android:id="@+id/tvLoginName"
                    android:paddingLeft="@dimen/common_dimension_10"
                    android:layout_width="@dimen/common_dimension_85"
                    android:layout_height="match_parent"
                    android:background="@color/gray4"
                    android:gravity="center"
                    android:text="*登录名称"
                    android:textColor="@color/red0"
                    android:textSize="@dimen/BasicTextSize"/>
                <EditText
                    android:inputType="text"
                    android:id="@+id/etLoginName"
                    android:background="@null"
                    android:lines="1"
                    android:hint="请输入登录名称..."
                    android:textCursorDrawable="@drawable/style_cursor_black"
                    android:layout_marginLeft="@dimen/common_dimension_89"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/SmallTextSize" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_add_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_1"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_50">
                <TextView
                    android:id="@+id/tvCustomName"
                    android:paddingLeft="@dimen/common_dimension_10"
                    android:layout_width="@dimen/common_dimension_85"
                    android:layout_height="match_parent"
                    android:background="@color/gray4"
                    android:gravity="center"
                    android:text="*客户名称"

                    android:textColor="@color/red0"
                    android:textSize="@dimen/BasicTextSize"/>
                <EditText
                    android:inputType="text"
                    android:id="@+id/etCustomName"
                    android:background="@null"
                    android:lines="1"
                    android:hint="请输入登录名称..."
                    android:textCursorDrawable="@drawable/style_cursor_black"
                    android:layout_marginLeft="@dimen/common_dimension_89"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/SmallTextSize" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_add_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_1"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_50">
                <TextView
                    android:id="@+id/tvStoreName"
                    android:paddingLeft="@dimen/common_dimension_10"
                    android:layout_width="@dimen/common_dimension_85"
                    android:layout_height="match_parent"
                    android:background="@color/gray4"
                    android:gravity="center"
                    android:text="店面名称"

                    android:textColor="@color/green1"
                    android:textSize="@dimen/BasicTextSize"/>
                <EditText
                    android:inputType="text"
                    android:id="@+id/etStoreName"
                    android:background="@null"
                    android:lines="1"
                    android:hint="请输入店面名称..."
                    android:textCursorDrawable="@drawable/style_cursor_black"
                    android:layout_marginLeft="@dimen/common_dimension_89"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/SmallTextSize" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_add_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_1"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlLocation"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_50">
                <TextView
                    android:id="@+id/tvAddress"
                    android:paddingLeft="@dimen/common_dimension_10"
                    android:layout_width="@dimen/common_dimension_85"
                    android:layout_height="match_parent"
                    android:background="@color/gray4"
                    android:gravity="center"
                    android:text="联系地址"

                    android:textColor="@color/green1"
                    android:textSize="@dimen/BasicTextSize"/>
                <TextView
                    android:paddingRight="@dimen/common_dimension_12"
                    android:textColor="@color/black"
                    android:id="@+id/tvLocation"
                    android:layout_marginRight="@dimen/common_dimension_30"
                    android:layout_marginLeft="@dimen/common_dimension_89"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:hint="@string/str_tv_hint_choose_ads"
                    android:textSize="@dimen/SmallTextSize"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_dimension_12"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/shape_arrow_bigger"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_add_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_1"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_50">
                <TextView
                    android:id="@+id/tvStreetDetail"
                    android:paddingLeft="@dimen/common_dimension_10"
                    android:layout_width="@dimen/common_dimension_85"
                    android:layout_height="match_parent"
                    android:background="@color/gray4"
                    android:gravity="center"
                    android:text="街道明细"

                    android:textColor="@color/green1"
                    android:textSize="@dimen/BasicTextSize"/>
                <EditText
                    android:inputType="text"
                    android:id="@+id/etStreetDetail"
                    android:background="@null"
                    android:lines="1"
                    android:hint="请输入街道明细..."
                    android:textCursorDrawable="@drawable/style_cursor_black"
                    android:layout_marginLeft="@dimen/common_dimension_89"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/SmallTextSize" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_add_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_1"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_50">
                <TextView
                    android:id="@+id/tvPhone"
                    android:paddingLeft="@dimen/common_dimension_10"
                    android:layout_width="@dimen/common_dimension_85"
                    android:layout_height="match_parent"
                    android:background="@color/gray4"
                    android:gravity="center"
                    android:text="*联系电话"

                    android:textColor="@color/red0"
                    android:textSize="@dimen/BasicTextSize"/>
                <EditText
                    android:inputType="text"
                    android:id="@+id/etPhone"
                    android:background="@null"
                    android:lines="1"
                    android:hint="请输入联系电话..."
                    android:textCursorDrawable="@drawable/style_cursor_black"
                    android:layout_marginLeft="@dimen/common_dimension_89"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/SmallTextSize" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_add_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_1"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_50">
                <TextView
                    android:id="@+id/tvYearIncome"
                    android:paddingLeft="@dimen/common_dimension_10"
                    android:layout_width="@dimen/common_dimension_85"
                    android:layout_height="match_parent"
                    android:background="@color/gray4"
                    android:gravity="center"
                    android:text="年营业额"

                    android:textColor="@color/green1"
                    android:textSize="@dimen/BasicTextSize"/>
                <EditText
                    android:inputType="number"
                    android:id="@+id/etYearIncome"
                    android:background="@null"
                    android:lines="1"
                    android:hint="请输入年营业额..."
                    android:textCursorDrawable="@drawable/style_cursor_black"
                    android:layout_marginLeft="@dimen/common_dimension_89"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/SmallTextSize" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_add_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_1"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_50">
                <TextView
                    android:id="@+id/tvSellAddress"
                    android:paddingLeft="@dimen/common_dimension_10"
                    android:layout_width="@dimen/common_dimension_85"
                    android:layout_height="match_parent"
                    android:background="@color/gray4"
                    android:gravity="center"
                    android:text="经销区域"

                    android:textColor="@color/green1"
                    android:textSize="@dimen/BasicTextSize"/>
                <EditText
                    android:inputType="text"
                    android:id="@+id/etSellAddress"
                    android:background="@null"
                    android:lines="1"
                    android:hint="请输入经销区域..."
                    android:textCursorDrawable="@drawable/style_cursor_black"
                    android:layout_marginLeft="@dimen/common_dimension_89"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/SmallTextSize" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_add_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_1"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimension_60">
                <LinearLayout
                    android:id="@+id/llAgCategory"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="@dimen/common_dimension_85"
                    android:layout_height="match_parent"
                    android:background="@color/gray4">
                    <TextView
                        android:id="@+id/tvAgencyCy"
                        android:text="经销类别"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green1"
                        android:textSize="@dimen/BasicTextSize"/>
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_agency_category"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                </LinearLayout>

                <EditText
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:id="@+id/etAgencyCg"
                    android:background="@null"
                    android:hint="请输入经销类别..."
                    android:textCursorDrawable="@drawable/style_cursor_black"
                    android:layout_marginLeft="@dimen/common_dimension_89"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/SmallTextSize" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_add_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_1"
                    />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
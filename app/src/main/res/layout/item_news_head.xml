<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/gray8"
    android:layout_height="@dimen/toolbar_height">
    <LinearLayout
        android:id="@+id/llNewsTabSyn"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            tools:ignore="NestedWeights">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_news_head_sync"
                android:scaleType="centerInside"
                android:layout_width="22dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_dimension_2"
                android:id="@+id/tvNewsTabSyn"
                android:textColor="@color/black"
                android:text="综合"
                android:textSize="@dimen/SmallerTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:visibility="gone"
            android:id="@+id/viewNewsHeadSyn"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:background="@color/green3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llNewsTabHots"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            tools:ignore="NestedWeights">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_news_head_hots"
                android:scaleType="centerInside"
                android:layout_width="22dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_dimension_2"
                android:id="@+id/tvNewsTabHots"
                android:textColor="@color/black"
                android:text="热销"
                android:textSize="@dimen/SmallerTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:visibility="gone"
            android:id="@+id/viewNewsTabHots"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:background="@color/green3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNewsTabNew"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            tools:ignore="NestedWeights">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_news_head_discount"
                android:scaleType="centerInside"
                android:layout_width="22dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_dimension_2"
                android:id="@+id/tvNewsTabNew"
                android:textColor="@color/black"
                android:text="优惠"
                android:textSize="@dimen/SmallerTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:id="@+id/viewNewsHeadNew"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:background="@color/green3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent">
        <com.jaredrummler.materialspinner.MaterialSpinner
            app:ms_background_color="@color/gray8"
            android:id="@+id/spNewsHead"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <View
            android:id="@+id/viewNewsHeadSpinner"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:background="@color/green3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>


</LinearLayout>